@model IEnumerable<MusicPlayer.Models.Playlist>

@{
    ViewBag.Title = "Playlists";
}

<h2>Playlists</h2>
<p style="height: 35px;">
    @* Take a look at adding glyphicons if you have time *@
    @Html.ActionLink("Add", "Create", "Playlists", null, new { @class = "btn btn-primary .glyphicon glyphicon-plus" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
